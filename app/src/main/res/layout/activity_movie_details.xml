<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    tools:context=".activity.MovieDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimaryDark"
            app:collapsedTitleTextAppearance="@style/collapseTitle"
            app:expandedTitleTextAppearance="@style/expandedTitle"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/detial_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_shadow_2"
                app:layout_collapseMode="parallax">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimary"
                    app:layout_constraintDimensionRatio="@string/heightRatioDetails"
                    android:animateLayoutChanges="true"
                    android:id="@+id/constraintHolder"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <!--actual image-->
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/landscape_placeholder"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/movie_image_large"
                        android:layout_marginBottom="@dimen/size_0"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/transparantWhite"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/view"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/size_8"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_8"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="@dimen/size_8"
                        app:layout_constraintBottom_toBottomOf="@+id/view"
                        app:layout_constraintVertical_bias="0.67"
                        android:id="@+id/frameLayout">

                        <FrameLayout
                            android:id="@+id/midFrame"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_4"
                            android:layout_marginEnd="@dimen/size_4"
                            android:layout_marginBottom="@dimen/size_8">

                            <FrameLayout
                                android:id="@+id/cardView_frame"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.v7.widget.CardView
                                    android:id="@+id/constraintLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/size_8"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginEnd="@dimen/size_0"
                                    android:layout_marginBottom="3dp"
                                    app:cardCornerRadius="@dimen/size_4"
                                    app:cardElevation="@dimen/size_2">

                                </android.support.v7.widget.CardView>
                            </FrameLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:id="@+id/searchMovieLayout"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/movie_image_width"
                                    android:layout_height="@dimen/movie_image_height"
                                    android:id="@+id/imageHolder"
                                    android:layout_marginStart="@dimen/size_16"
                                    android:layout_marginBottom="@dimen/size_16"
                                    app:cardCornerRadius="@dimen/size_4">

                                    <ImageView
                                        android:id="@+id/movie_image_small"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"/>

                                </android.support.v7.widget.CardView>


                                <TextView
                                    android:id="@+id/movie_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/size_8"
                                    android:layout_marginTop="@dimen/size_16"
                                    android:layout_marginEnd="@dimen/size_8"
                                    android:layout_toEndOf="@+id/imageHolder"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/ps_bold"
                                    android:maxLines="2"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/textSmall"/>

                                <TextView
                                    android:fontFamily="@font/ps_regular"
                                    android:id="@+id/movie_genere"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/movie_name"
                                    android:layout_marginStart="@dimen/size_8"
                                    android:layout_marginEnd="@dimen/size_8"
                                    android:layout_toEndOf="@+id/imageHolder"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:textSize="@dimen/textMini"
                                    android:textColor="@color/colorBlack"/>

                                <TextView
                                    android:id="@+id/movie_language"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/movie_genere"
                                    android:layout_marginStart="@dimen/size_8"
                                    android:layout_marginEnd="@dimen/size_8"
                                    android:layout_toEndOf="@+id/imageHolder"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:fontFamily="@font/ps_regular"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textMini"/>

                                <TextView
                                    android:id="@+id/movie_duration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ps_bold"
                                    android:layout_below="@+id/movie_language"
                                    android:layout_marginStart="@dimen/size_8"
                                    android:layout_marginTop="@dimen/size_4"
                                    android:layout_toEndOf="@+id/imageHolder"
                                    android:background="@drawable/primary_border_background"
                                    android:paddingLeft="@dimen/size_4"
                                    android:paddingTop="@dimen/size_1"
                                    android:paddingRight="@dimen/size_4"
                                    android:paddingBottom="@dimen/size_1"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/textMini"
                                    />

                                <TextView
                                    android:id="@+id/textView18"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/movie_language"
                                    android:layout_marginStart="@dimen/size_8"
                                    android:layout_toEndOf="@+id/movie_duration"
                                    android:text="@string/vertical_line"
                                    android:paddingTop="@dimen/size_1"
                                    android:paddingBottom="@dimen/size_1"
                                    android:layout_alignBaseline="@+id/movie_duration"
                                    android:textSize="@dimen/textMini"
                                    android:textColor="@color/colorBlack"/>

                                <TextView
                                    android:fontFamily="@font/ps_regular"
                                    android:id="@+id/movie_date"
                                    android:paddingTop="@dimen/size_1"
                                    android:paddingBottom="@dimen/size_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/movie_language"
                                    android:layout_marginStart="@dimen/size_8"
                                    android:layout_alignBaseline="@+id/movie_duration"
                                    android:layout_marginEnd="@dimen/size_8"
                                    android:layout_toEndOf="@+id/textView18"
                                    android:textSize="@dimen/textMini"
                                    android:textColor="@color/colorBlack"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:id="@+id/ratingHolder"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginEnd="@dimen/size_8"
                                    android:layout_marginStart="@dimen/size_8"
                                    android:layout_marginTop="@dimen/size_4"
                                    android:layout_toEndOf="@+id/imageHolder"
                                    android:layout_below="@+id/movie_duration">

                                    <TextView
                                        android:text="@string/_0"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tv_rating"
                                        android:textColor="@color/colorBlack"
                                        android:layout_marginEnd="@dimen/size_4"
                                        android:textSize="@dimen/textMini"
                                        android:fontFamily="@font/ps_regular"
                                        android:layout_gravity="center_vertical"/>

                                    <RatingBar
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/ratingBar"
                                        style="?attr/ratingBarStyleSmall"
                                        android:rating="0"
                                        android:stepSize="0.1"
                                        android:theme="@style/ratingBar"
                                        android:layout_gravity="center_vertical"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_totalComment"
                                    android:layout_width="wrap_content"
                                    android:layout_marginStart="@dimen/size_8"
                                    android:layout_marginTop="@dimen/size_4"
                                    android:layout_marginEnd="@dimen/size_8"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_review_small"
                                    android:drawablePadding="@dimen/size_4"
                                    android:text="@string/_0"
                                    android:fontFamily="@font/ps_regular"
                                    android:textSize="@dimen/textMini"
                                    android:textColor="@color/colorBlack"
                                    android:layout_alignParentEnd="true"
                                    android:layout_toStartOf="@+id/ratingHolder"
                                    android:layout_alignBaseline="@+id/ratingHolder"
                                    android:layout_below="@+id/movie_duration"
                                    android:gravity="center_vertical"
                                    />

                            </RelativeLayout>

                        </FrameLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/playFrame"
                        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
                        app:layout_constraintTop_toTopOf="@+id/view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintVertical_bias="0.65"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginBottom="@dimen/size_8"
                        android:layout_marginTop="@dimen/size_8"
                        android:layout_marginEnd="@dimen/size_8"
                        android:layout_marginStart="@dimen/size_8"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView_play"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/play_icon"/>

                    </FrameLayout>


                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:minHeight="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

            <RelativeLayout
                android:id="@+id/relativeTabs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:background="@color/colorLayout"
                android:layout_gravity="bottom">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tab_bar_height"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/size_20"
                    android:layout_marginStart="@dimen/size_20"
                    app:tabPaddingStart="0dp"
                    app:tabPaddingEnd="0dp"
                    app:tabMode="fixed"
                    app:tabGravity="fill"
                    app:tabMaxWidth="0dp"
                    app:tabRippleColor="@null"
                    app:tabIndicatorColor="@color/colorTransparent">

                    <android.support.design.widget.TabItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/today"
                        android:layout="@layout/tab_today"
                        android:id="@+id/today_shows"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tomorrow_shows"
                        android:text="@string/tomorrow"
                        android:layout="@layout/tab_today"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/dayAfter_shows"
                        android:text="@string/day_after"
                        android:layout="@layout/tab_today"/>

                </android.support.design.widget.TabLayout>
            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

